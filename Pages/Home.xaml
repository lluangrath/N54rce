<UserControl x:Class="N54rce.Pages.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="0">
            <StackPanel MinWidth="200">
                <TextBlock Text="Select model" />
                <ListView>
                    <ListViewItem>135i</ListViewItem>
                    <ListViewItem>335i</ListViewItem>
                    <ListViewItem>535i</ListViewItem>
                </ListView>
            </StackPanel>
            
        </ScrollViewer>
        <ScrollViewer Grid.Column="1">
            <StackPanel MinWidth="200">
                <TextBlock Text="Select chassis" />
                <ListView>
                    <ListViewItem>E90</ListViewItem>
                    <ListViewItem>F35</ListViewItem>
                </ListView>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
